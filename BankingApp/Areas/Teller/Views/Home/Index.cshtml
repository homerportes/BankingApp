@{
    ViewData["Title"] = "Panel de Cajero";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard - Cajero</h1>
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Depósitos Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Depósitos</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Realizar</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-down fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Retiros Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Retiros</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Realizar</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-up fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pagos Tarjetas Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Pago Tarjetas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Procesar</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-credit-card fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pago Préstamos Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pago Préstamos</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Procesar</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-hand-holding-usd fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Accesos Rápidos -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Operaciones de Caja</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-area="Teller" asp-controller="Teller" asp-action="Deposit" class="btn btn-success btn-block">
                                <i class="fas fa-arrow-down"></i> Realizar Depósito
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-area="Teller" asp-controller="Teller" asp-action="Withdrawal" class="btn btn-danger btn-block">
                                <i class="fas fa-arrow-up"></i> Realizar Retiro
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-area="Teller" asp-controller="Teller" asp-action="CreditCardPayment" class="btn btn-info btn-block">
                                <i class="fas fa-credit-card"></i> Pago de Tarjeta
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-area="Teller" asp-controller="Teller" asp-action="LoanPayment" class="btn btn-warning btn-block">
                                <i class="fas fa-hand-holding-usd"></i> Pago de Préstamo
                            </a>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12 mb-3">
                            <a asp-area="Teller" asp-controller="Teller" asp-action="ThirdPartyTransactions" class="btn btn-primary btn-block">
                                <i class="fas fa-exchange-alt"></i> Transacciones a Terceros
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Información de Bienvenida -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Bienvenido al Panel de Cajero</h6>
                </div>
                <div class="card-body">
                    <p>Como cajero puedes realizar las siguientes operaciones:</p>
                    <ul>
                        <li><strong>Depósitos:</strong> Registrar depósitos en cuentas de clientes</li>
                        <li><strong>Retiros:</strong> Procesar retiros de efectivo</li>
                        <li><strong>Pagos de Tarjetas:</strong> Recibir pagos de tarjetas de crédito</li>
                        <li><strong>Pagos de Préstamos:</strong> Procesar pagos de cuotas de préstamos</li>
                        <li><strong>Transacciones a Terceros:</strong> Realizar transferencias para clientes</li>
                    </ul>
                    <div class="alert alert-warning mt-3" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> Recuerda verificar siempre la identidad del cliente antes de procesar cualquier transacción.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
