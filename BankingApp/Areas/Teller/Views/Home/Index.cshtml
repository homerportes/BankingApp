@model BankingApp.Core.Application.ViewModels.Teller.TellerDashboardViewModel
@{
    ViewData["Title"] = "Dashboard - Cajero";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center mb-4">
                <i class="bi bi-speedometer2"></i> Panel del Cajero
            </h2>
            <h5 class="text-center text-muted">Estadísticas del día - @DateTime.Now.ToString("dd/MM/yyyy")</h5>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Estadísticas en Cards -->
    <div class="row g-4">
        <!-- Total Transacciones -->
        <div class="col-md-6 col-lg-3">
            <div class="card text-center shadow-sm h-100 border-primary">
                <div class="card-body">
                    <i class="bi bi-receipt text-primary" style="font-size: 3rem;"></i>
                    <h3 class="card-title mt-3 text-primary">@Model.TotalTransactionsToday</h3>
                    <p class="card-text text-muted">Transacciones Totales</p>
                </div>
            </div>
        </div>

        <!-- Depósitos -->
        <div class="col-md-6 col-lg-3">
            <div class="card text-center shadow-sm h-100 border-success">
                <div class="card-body">
                    <i class="bi bi-wallet2 text-success" style="font-size: 3rem;"></i>
                    <h3 class="card-title mt-3 text-success">@Model.TotalDepositsToday</h3>
                    <p class="card-text text-muted">Depósitos</p>
                </div>
            </div>
        </div>

        <!-- Retiros -->
        <div class="col-md-6 col-lg-3">
            <div class="card text-center shadow-sm h-100 border-warning">
                <div class="card-body">
                    <i class="bi bi-cash-stack text-warning" style="font-size: 3rem;"></i>
                    <h3 class="card-title mt-3 text-warning">@Model.TotalWithdrawalsToday</h3>
                    <p class="card-text text-muted">Retiros</p>
                </div>
            </div>
        </div>

        <!-- Pagos -->
        <div class="col-md-6 col-lg-3">
            <div class="card text-center shadow-sm h-100 border-info">
                <div class="card-body">
                    <i class="bi bi-credit-card text-info" style="font-size: 3rem;"></i>
                    <h3 class="card-title mt-3 text-info">@Model.TotalPaymentsToday</h3>
                    <p class="card-text text-muted">Pagos Realizados</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Accesos rápidos a operaciones -->
    <div class="row mt-5">
        <div class="col-12">
            <h4 class="mb-3"><i class="bi bi-lightning-fill"></i> Acceso Rápido a Operaciones</h4>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-6 col-lg-4">
            <a asp-area="Teller" asp-controller="Teller" asp-action="Deposit" class="text-decoration-none">
                <div class="card shadow-sm hover-card">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-wallet2 text-success me-3" style="font-size: 2rem;"></i>
                        <div>
                            <h5 class="card-title mb-0">Depósito</h5>
                            <p class="card-text text-muted small">Realizar depósito a cuenta</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-area="Teller" asp-controller="Teller" asp-action="Withdrawal" class="text-decoration-none">
                <div class="card shadow-sm hover-card">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-cash-stack text-warning me-3" style="font-size: 2rem;"></i>
                        <div>
                            <h5 class="card-title mb-0">Retiro</h5>
                            <p class="card-text text-muted small">Realizar retiro de cuenta</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-area="Teller" asp-controller="Teller" asp-action="CreditCardPayment" class="text-decoration-none">
                <div class="card shadow-sm hover-card">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-credit-card-2-front text-primary me-3" style="font-size: 2rem;"></i>
                        <div>
                            <h5 class="card-title mb-0">Pago de Tarjeta</h5>
                            <p class="card-text text-muted small">Pagar tarjeta de crédito</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-area="Teller" asp-controller="Teller" asp-action="LoanPayment" class="text-decoration-none">
                <div class="card shadow-sm hover-card">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-cash-coin text-danger me-3" style="font-size: 2rem;"></i>
                        <div>
                            <h5 class="card-title mb-0">Pago de Préstamo</h5>
                            <p class="card-text text-muted small">Realizar pago de préstamo</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-area="Teller" asp-controller="Teller" asp-action="ThirdPartyTransactions" class="text-decoration-none">
                <div class="card shadow-sm hover-card">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-arrow-left-right text-info me-3" style="font-size: 2rem;"></i>
                        <div>
                            <h5 class="card-title mb-0">Transferencias</h5>
                            <p class="card-text text-muted small">Transferencia entre cuentas</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hover-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
}

