<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankingApp Cajero</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/EstructuraLayoutStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BankingApp.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg custom-navbar shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="Teller" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-check-fill"></i> Home
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarATM" aria-controls="navbarATM" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarATM">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Teller" asp-controller="Teller" asp-action="Deposit">
                                <i class="bi bi-wallet2"></i> Depósito
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Teller" asp-controller="Teller" asp-action="Withdrawal">
                                <i class="bi bi-cash-stack"></i> Retiro
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Teller" asp-controller="Teller" asp-action="CreditCardPayment">
                                <i class="bi bi-credit-card-2-front"></i> Pago de tarjeta
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Teller" asp-controller="Teller" asp-action="LoanPayment">
                                <i class="bi bi-cash-coin"></i> Pago de préstamo
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Teller" asp-controller="Teller" asp-action="ThirdPartyTransactions">
                                <i class="bi bi-arrow-left-right"></i> Transferencias a terceros
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Cerrar sesion
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="custom-footer text-center py-3 mt-auto">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - <strong>BankingApp</strong>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


