@model LoanPaymentViewModel
@{
    ViewData["Title"] = "Confirmar Pago de Préstamo";
    Layout = "_LayoutTeller";
    var loanHolderName = TempData["LoanHolderName"]?.ToString() ?? "N/A";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirmar Pago de Préstamo
                    </h4>
                </div>
                <div class="card-body">
                   
                    <div class="mb-4">
                        <h5 class="text-muted mb-3">¿Está seguro de que desea procesar este préstamo? Esta acción no se puede deshacer</h5>
                        
                        <div class="row mb-3">
                            <div class="col-6 text-muted">
                                <i class="bi bi-person-circle"></i> Titular:
                            </div>
                            <div class="col-6">
                                <strong>@loanHolderName</strong>
                            </div>
                        </div>

                    
                        @if (Model.Amount > Model.RemainingBalance)
                        {
                            <div class="alert alert-info small" role="alert">
                                <i class="bi bi-info-circle"></i> El monto excede el saldo pendiente. Se devolverán <strong>RD$ @((Model.Amount - Model.RemainingBalance).ToString("N2"))</strong> a la cuenta.
                            </div>
                        }

                        
                    </div>

                    <form asp-area="Teller" asp-controller="Teller" asp-action="ConfirmLoanPayment" method="post">
                        <div class="d-grid gap-2">
                            <button type="submit" name="confirm" value="true" class="btn btn-danger btn-lg">
                                <i class="bi bi-check-circle-fill"></i> Confirmar Pago
                            </button>
                            <a asp-area="Teller" asp-controller="Home" asp-action="Index"
                               class="btn btn-warning px-4 py-2 rounded-pill fw-semibold shadow-sm">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
