@model LoanPaymentViewModel
@{
    ViewData["Title"] = "Confirmar Pago de Préstamo";
    Layout = "_LayoutTeller";
    var loanHolderName = TempData["LoanHolderName"]?.ToString() ?? "N/A";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirmar Pago de Préstamo
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-info-circle-fill"></i> 
                        Por favor, revise los datos antes de confirmar la operación.
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted mb-3">Detalles de la Operación:</h5>
                        
                        <div class="row mb-3">
                            <div class="col-6 text-muted">
                                <i class="bi bi-person-circle"></i> Titular:
                            </div>
                            <div class="col-6">
                                <strong>@loanHolderName</strong>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6 text-muted">
                                <i class="bi bi-hash"></i> Cuenta Origen:
                            </div>
                            <div class="col-6">
                                <strong>@Model.AccountNumber</strong>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6 text-muted">
                                <i class="bi bi-file-earmark-text"></i> Préstamo:
                            </div>
                            <div class="col-6">
                                <strong>@Model.LoanNumber</strong>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6 text-muted">
                                <i class="bi bi-exclamation-circle"></i> Saldo Pendiente:
                            </div>
                            <div class="col-6">
                                <strong class="text-danger">RD$ @Model.RemainingBalance.ToString("N2")</strong>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6 text-muted">
                                <i class="bi bi-currency-dollar"></i> Monto del Pago:
                            </div>
                            <div class="col-6">
                                <strong class="text-success fs-4">RD$ @Model.Amount.ToString("N2")</strong>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6 text-muted">
                                <i class="bi bi-calculator"></i> Saldo después del pago:
                            </div>
                            <div class="col-6">
                                @{
                                    var remainingAfterPayment = Model.RemainingBalance - Model.Amount;
                                    if (remainingAfterPayment < 0) remainingAfterPayment = 0;
                                }
                                <strong>RD$ @remainingAfterPayment.ToString("N2")</strong>
                            </div>
                        </div>

                        @if (Model.Amount > Model.RemainingBalance)
                        {
                            <div class="alert alert-info small" role="alert">
                                <i class="bi bi-info-circle"></i> El monto excede el saldo pendiente. Se devolverán <strong>RD$ @((Model.Amount - Model.RemainingBalance).ToString("N2"))</strong> a la cuenta.
                            </div>
                        }

                        <div class="row">
                            <div class="col-6 text-muted">
                                <i class="bi bi-calendar-check"></i> Fecha:
                            </div>
                            <div class="col-6">
                                <strong>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</strong>
                            </div>
                        </div>
                    </div>

                    <form asp-area="Teller" asp-controller="Teller" asp-action="ConfirmLoanPayment" method="post">
                        <div class="d-grid gap-2">
                            <button type="submit" name="confirm" value="true" class="btn btn-danger btn-lg">
                                <i class="bi bi-check-circle-fill"></i> Confirmar Pago
                            </button>
                            <button type="submit" name="confirm" value="false" class="btn btn-outline-danger">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
