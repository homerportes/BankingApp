@model BankingApp.Core.Application.ViewModels.Teller.WithdrawalViewModel
@{
    ViewData["Title"] = "Confirmar Retiro";
    Layout = "_LayoutTeller";
    var accountHolderName = TempData["AccountHolderName"]?.ToString() ?? "N/A";
    var balance = TempData["Balance"] != null ? Convert.ToDecimal(TempData["Balance"]) : 0;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirmar Retiro
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-info-circle-fill"></i> 
                        Por favor, revise los datos antes de confirmar la operación.
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted mb-3">Detalles de la Operación:</h5>
                        
                        <div class="row mb-3">
                            <div class="col-5 text-muted">
                                <i class="bi bi-person-circle"></i> Titular:
                            </div>
                            <div class="col-7">
                                <strong>@accountHolderName</strong>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-5 text-muted">
                                <i class="bi bi-hash"></i> Cuenta:
                            </div>
                            <div class="col-7">
                                <strong>@Model.AccountNumber</strong>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-5 text-muted">
                                <i class="bi bi-wallet2"></i> Saldo Actual:
                            </div>
                            <div class="col-7">
                                <strong>RD$ @balance.ToString("N2")</strong>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-5 text-muted">
                                <i class="bi bi-currency-dollar"></i> Monto a Retirar:
                            </div>
                            <div class="col-7">
                                <strong class="text-warning fs-4">RD$ @Model.Amount.ToString("N2")</strong>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-5 text-muted">
                                <i class="bi bi-calculator"></i> Saldo Final:
                            </div>
                            <div class="col-7">
                                <strong class="text-primary">RD$ @((balance - Model.Amount).ToString("N2"))</strong>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-5 text-muted">
                                <i class="bi bi-calendar-check"></i> Fecha:
                            </div>
                            <div class="col-7">
                                <strong>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</strong>
                            </div>
                        </div>
                    </div>

                    <form asp-area="Teller" asp-controller="Teller" asp-action="ConfirmWithdrawal" method="post">
                        <div class="d-grid gap-2">
                            <button type="submit" name="confirm" value="true" class="btn btn-warning btn-lg text-dark">
                                <i class="bi bi-check-circle-fill"></i> Confirmar Retiro
                            </button>
                            <a asp-area="Teller" asp-controller="Home" asp-action="Index"
                               class="btn btn-warning px-4 py-2 rounded-pill fw-semibold shadow-sm">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
