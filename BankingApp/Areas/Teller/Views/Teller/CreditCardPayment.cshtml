@model BankingApp.Core.Application.ViewModels.Teller.CreditCardPaymentViewModel
@{
    ViewData["Title"] = "Pago de Tarjeta de Crédito";
    Layout = "_LayoutTeller";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Instrucciones de uso -->
            <div class="alert alert-info shadow-sm mb-4" role="alert">
                <h5 class="alert-heading">
                    <i class="bi bi-info-circle-fill"></i> ¿Cómo realizar un pago de tarjeta?
                </h5>
                <hr>
                <ol class="mb-0 ps-3">
                    <li><strong>Número de Cuenta:</strong> Ingrese la cuenta de ahorros desde donde se debitará el dinero (9 dígitos)</li>
                    <li><strong>Número de Tarjeta:</strong> Ingrese el número de la tarjeta de crédito a pagar (16 dígitos)</li>
                    <li><strong>Monto:</strong> Ingrese el monto a pagar (debe ser mayor a 0)</li>
                </ol>
                <div class="mt-2 p-2 bg-light rounded">
                    <small class="text-muted">
                        <i class="bi bi-lightbulb"></i> <strong>Ejemplo de prueba:</strong><br>
                        • Número de tarjeta: <code>8244218090672493</code> (con $500 de deuda)<br>
                        • Puede pagar cualquier monto entre $0.01 y el total de la deuda
                    </small>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-credit-card-2-front"></i> Pago de Tarjeta de Crédito
                    </h4>
                </div>
                <div class="card-body">
                    @* Mostrar mensajes de error de TempData *@
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> 
                            <strong>Error:</strong> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @* Mostrar mensajes de éxito *@
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill"></i> 
                            <strong>Éxito:</strong> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-area="Teller" asp-controller="Teller" asp-action="CreditCardPayment" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="AccountNumber" class="form-label fw-bold">
                                <i class="bi bi-hash"></i> Número de Cuenta de Ahorros (Origen del Pago)
                            </label>
                            <input asp-for="AccountNumber" 
                                   class="form-control form-control-lg" 
                                   placeholder="Ej: 123456789" 
                                   maxlength="9"
                                   pattern="[0-9]{9}"
                                   autofocus />
                            <span asp-validation-for="AccountNumber" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-arrow-right"></i> La cuenta desde donde se debitará el dinero para pagar la tarjeta
                            </div>
                        </div>

                 
                        <div class="mb-4">
                            <label asp-for="Amount" class="form-label fw-bold">
                                <i class="bi bi-currency-dollar"></i> Monto a Pagar
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">RD$</span>
                                <input asp-for="Amount" 
                                       class="form-control" 
                                       placeholder="0.00"
                                       type="number"
                                       step="0.01"
                                       min="0.01" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-arrow-right"></i> Si paga más de lo debido, solo se cobrará el monto exacto de la deuda
                            </div>
                        </div>


                        <div class="mb-3">
                            <label asp-for="CardNumber" class="form-label fw-bold">
                                <i class="bi bi-credit-card"></i> Número de Tarjeta de Crédito (Destino del Pago)
                            </label>
                            <input asp-for="CardNumber"
                                   class="form-control form-control-lg"
                                   placeholder="Ej: 8244218090672493"
                                   maxlength="16"
                                   pattern="[0-9]{16}" />
                            <span asp-validation-for="CardNumber" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-arrow-right"></i> La tarjeta cuya deuda será reducida con este pago
                            </div>
                        </div>


                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle-fill"></i> Procesar Pago
                            </button>
                            <a asp-area="Teller" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar y Regresar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Nota informativa al final -->
            <div class="alert alert-warning mt-3 shadow-sm" role="alert">
                <h6 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill"></i> Importante
                </h6>
                <ul class="mb-0 small">
                    <li>Verifique que la cuenta de origen tenga saldo suficiente</li>
                    <li>El pago se procesará inmediatamente y reducirá la deuda de la tarjeta</li>
                    <li>Recibirá una confirmación en la siguiente pantalla antes de completar la operación</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

