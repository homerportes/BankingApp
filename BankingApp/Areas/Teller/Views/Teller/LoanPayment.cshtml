@model BankingApp.Core.Application.ViewModels.Teller.LoanPaymentViewModel
@{
    ViewData["Title"] = "Pago de Préstamo";
    Layout = "_LayoutTeller";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-cash-coin"></i> Pago de Préstamo
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-area="Teller" asp-controller="Teller" asp-action="LoanPayment" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="AccountNumber" class="form-label">
                                <i class="bi bi-hash"></i> Número de Cuenta (Origen del pago)
                            </label>
                            <input asp-for="AccountNumber" 
                                   class="form-control form-control-lg" 
                                   placeholder="Ingrese 9 dígitos" 
                                   maxlength="9"
                                   pattern="[0-9]{9}"
                                   autofocus />
                            <span asp-validation-for="AccountNumber" class="text-danger"></span>
                            <div class="form-text">Cuenta desde la cual se realizará el pago</div>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">
                                <i class="bi bi-currency-dollar"></i> Monto del Pago
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">RD$</span>
                                <input asp-for="Amount"
                                       class="form-control"
                                       placeholder="0.00"
                                       type="number"
                                       step="0.01"
                                       min="0.01" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="LoanNumber" class="form-label">
                                <i class="bi bi-file-earmark-text"></i> Número de Préstamo
                            </label>
                            <input asp-for="LoanNumber" 
                                   class="form-control form-control-lg" 
                                   placeholder="Ingrese 9 dígitos" 
                                   maxlength="9"
                                   pattern="[0-9]{9}" />
                            <span asp-validation-for="LoanNumber" class="text-danger"></span>
                            <div class="form-text">Préstamo al que se aplicará el pago</div>
                        </div>

                       

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-check-circle"></i> Continuar
                            </button>
                            <a asp-area="Teller" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Regresar al Dashboard
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-3" role="alert">
                <i class="bi bi-info-circle-fill"></i> 
                <strong>Nota:</strong> El pago se aplicará a las cuotas pendientes en orden de vencimiento. Si el monto excede el saldo pendiente, se devolverá el exceso.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

