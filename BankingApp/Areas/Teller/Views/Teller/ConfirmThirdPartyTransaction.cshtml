@model BankingApp.Core.Application.ViewModels.Teller.ThirdPartyTransactionViewModel
@{
    ViewData["Title"] = "Confirmar Transferencia";
    Layout = "_LayoutTeller";
    var destinationAccountHolderName = TempData["DestinationAccountHolderName"]?.ToString() ?? "N/A";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-info">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirmar Transferencia
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-info-circle-fill"></i> 
                        Por favor, revise los datos antes de confirmar la operación. Esta acción no se puede deshacer.
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted mb-3">Detalles de la Transferencia:</h5>
                        
                        <div class="card mb-3 border-primary">
                            <div class="card-header bg-light">
                                <strong><i class="bi bi-box-arrow-right"></i> Cuenta Origen</strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-5 text-muted">Número:</div>
                                    <div class="col-7"><strong>@Model.SourceAccountNumber</strong></div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center my-3">
                            <i class="bi bi-arrow-down-circle text-info" style="font-size: 2rem;"></i>
                        </div>

                        <div class="card mb-3 border-success">
                            <div class="card-header bg-light">
                                <strong><i class="bi bi-box-arrow-in-down"></i> Cuenta Destino</strong>
                            </div>
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-5 text-muted">Número:</div>
                                    <div class="col-7"><strong>@Model.DestinationAccountNumber</strong></div>
                                </div>
                                <div class="row">
                                    <div class="col-5 text-muted">Titular:</div>
                                    <div class="col-7"><strong>@destinationAccountHolderName</strong></div>
                                </div>
                            </div>
                        </div>

                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <div class="row">
                                    <div class="col-12 mb-2">
                                        <i class="bi bi-currency-dollar text-success" style="font-size: 2.5rem;"></i>
                                    </div>
                                    <div class="col-12">
                                        <p class="text-muted mb-1">Monto a Transferir</p>
                                        <h2 class="text-success mb-0">RD$ @Model.Amount.ToString("N2")</h2>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-5 text-muted">
                                <i class="bi bi-calendar-check"></i> Fecha:
                            </div>
                            <div class="col-7">
                                <strong>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</strong>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info small" role="alert">
                        <i class="bi bi-envelope"></i> Se enviará notificación por correo electrónico a ambos titulares de cuenta.
                    </div>

                    <form asp-area="Teller" asp-controller="Teller" asp-action="ConfirmThirdPartyTransaction" method="post">
                        <div class="d-grid gap-2">
                            <button type="submit" name="confirm" value="true" class="btn btn-info btn-lg text-white">
                                <i class="bi bi-check-circle-fill"></i> Confirmar Transferencia
                            </button>
                            <button type="submit" name="confirm" value="false" class="btn btn-outline-danger">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
