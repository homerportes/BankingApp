@model BankingApp.Core.Application.ViewModels.Teller.ThirdPartyTransactionViewModel
@{
    ViewData["Title"] = "Transferencia a Terceros";
    Layout = "_LayoutTeller";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-arrow-left-right"></i> Transferencia a Terceros
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-area="Teller" asp-controller="Teller" asp-action="ThirdPartyTransactions" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="SourceAccountNumber" class="form-label">
                                <i class="bi bi-box-arrow-right"></i> Cuenta Origen
                            </label>
                            <input asp-for="SourceAccountNumber" 
                                   class="form-control form-control-lg" 
                                   placeholder="Ingrese 9 dígitos" 
                                   maxlength="9"
                                   pattern="[0-9]{9}"
                                   autofocus />
                            <span asp-validation-for="SourceAccountNumber" class="text-danger"></span>
                            <div class="form-text">Cuenta desde donde se enviará el dinero</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DestinationAccountNumber" class="form-label">
                                <i class="bi bi-box-arrow-in-down"></i> Cuenta Destino
                            </label>
                            <input asp-for="DestinationAccountNumber" 
                                   class="form-control form-control-lg" 
                                   placeholder="Ingrese 9 dígitos" 
                                   maxlength="9"
                                   pattern="[0-9]{9}" />
                            <span asp-validation-for="DestinationAccountNumber" class="text-danger"></span>
                            <div class="form-text">Cuenta que recibirá el dinero</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">
                                <i class="bi bi-currency-dollar"></i> Monto a Transferir
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">RD$</span>
                                <input asp-for="Amount" 
                                       class="form-control" 
                                       placeholder="0.00"
                                       type="number"
                                       step="0.01"
                                       min="0.01" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info btn-lg text-white">
                                <i class="bi bi-check-circle"></i> Continuar
                            </button>
                            <a asp-area="Teller" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Regresar al Dashboard
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-warning mt-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> 
                <strong>Importante:</strong> Verifique que las cuentas sean correctas antes de continuar. Se enviará notificación por correo a ambos titulares.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

