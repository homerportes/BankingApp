@model BankingApp.Core.Application.ViewModels.Teller.DepositViewModel
@{
    ViewData["Title"] = "Confirmar Depósito";
    var accountHolderName = TempData["AccountHolderName"]?.ToString() ?? "N/A";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            @if (!string.IsNullOrEmpty(ViewData.ModelState.Values.FirstOrDefault()?.Errors.FirstOrDefault()?.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirmar Depósito
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-info-circle-fill"></i> 
                        Por favor, revise los datos antes de confirmar la operación.
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted mb-3">Detalles de la Operación:</h5>
                        
                        <div class="row mb-3">
                            <div class="col-5 text-muted">
                                <i class="bi bi-person-circle"></i> Titular:
                            </div>
                            <div class="col-7">
                                <strong>@accountHolderName</strong>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-5 text-muted">
                                <i class="bi bi-hash"></i> Cuenta:
                            </div>
                            <div class="col-7">
                                <strong>@Model.AccountNumber</strong>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-5 text-muted">
                                <i class="bi bi-currency-dollar"></i> Monto:
                            </div>
                            <div class="col-7">
                                <strong class="text-success fs-4">RD$ @Model.Amount.ToString("N2")</strong>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-5 text-muted">
                                <i class="bi bi-calendar-check"></i> Fecha:
                            </div>
                            <div class="col-7">
                                <strong>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</strong>
                            </div>
                        </div>
                    </div>

                    <form asp-area="Teller" asp-controller="Teller" asp-action="ConfirmDeposit" method="post">
                        <div class="d-grid gap-2">
                            <button type="submit" name="confirm" value="true" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle-fill"></i> Confirmar Depósito
                            </button>
                            <button type="submit" name="confirm" value="false" class="btn btn-outline-danger">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
