@model DataBeneficiaryViewModel

@{
    ViewData["Title"] = "Confirmar Transacción";
    Layout = "_LayoutClient";
}

<div class="container mt-5">
    <div class="d-flex justify-content-center align-items-center" style="min-height: 75vh;">
        <div class="card delete-card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 520px;">
            <div class="delete-card-header text-center p-4">
                <i class="bi bi-exclamation-triangle-fill text-warning fs-1"></i>
                <h4 class="fw-bold text-white mt-3 mb-1">Confirmar Transacción</h4>
                <p class="text-light mb-0">
                    ¿Estás seguro de confirmar la transacción? Si aceptas, el dinero será enviado a
                    <strong>@Model.Name @Model.LastName</strong>.
                </p>
            </div>

            <div class="card-body text-center bg-white py-4">
                <form asp-area="Client" asp-controller="TransactionExpress" asp-action="Confirm" method="post">
                    <input type="hidden" asp-for="IdBeneficiary" />

                    <div class="d-flex justify-content-center gap-3 mt-3">
                        <a asp-area="Client" asp-controller="Home" asp-action="Index"
                           class="btn btn-outline-primary px-4 py-2 rounded-pill fw-semibold shadow-sm">
                            <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                        </a>

                        <button type="submit"
                                class="btn btn-outline-danger px-4 py-2 rounded-pill fw-semibold shadow-sm confirm-btn">
                            <i class="bi bi-check-circle-fill me-1"></i> Confirmar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .delete-card-header {
        background: linear-gradient(135deg, var(--color-azul-oscuro), var(--color-azul-claro));
        color: var(--color-texto-claro);
    }

    .delete-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .delete-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(21, 77, 113, 0.25);
        }

    .confirm-btn {
        background: linear-gradient(90deg, #1C6EA4, #33A1E0);
        border: none;
        color: white;
    }

        .confirm-btn:hover {
            background: linear-gradient(90deg, #154D71, #1C6EA4);
        }
</style>

