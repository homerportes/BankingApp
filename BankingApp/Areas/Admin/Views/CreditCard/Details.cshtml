@model BankingApp.Core.Application.ViewModels.CreditCard.CreditCardViewModel

@{
    ViewData["Title"] = "Consumos de Tarjeta de Crédito";
    var purchases = ViewBag.Purchases as List<BankingApp.Core.Application.ViewModels.CreditCard.PurchaseViewModel>;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    </div>

    <!-- Listado de Consumos -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Consumos Registrados - Tarjeta @Model.CardNumber</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Fecha del Consumo</th>
                            <th>Monto Consumido</th>
                            <th>Comercio</th>
                            <th>Estado del Consumo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (purchases != null && purchases.Any())
                        {
                            @foreach (var purchase in purchases)
                            {
                                <tr>
                                    <td>@purchase.TransactionDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>$@purchase.Amount.ToString("N2")</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(purchase.CommerceName) || purchase.CommerceName.ToUpper().Contains("AVANCE"))
                                        {
                                            <strong class="text-warning">AVANCE</strong>
                                        }
                                        else
                                        {
                                            @purchase.CommerceName
                                        }
                                    </td>
                                    <td>
                                        @switch (purchase.Status)
                                        {
                                            case BankingApp.Core.Domain.Common.Enums.OperationStatus.APPROVED:
                                                <span class="badge bg-success">APROBADO</span>
                                                break;
                                            case BankingApp.Core.Domain.Common.Enums.OperationStatus.DECLINED:
                                                <span class="badge bg-danger">RECHAZADO</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">
                                    <div class="alert alert-info mb-0" role="alert">
                                        <i class="bi bi-info-circle"></i> No hay consumos registrados para esta tarjeta.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Botón Volver Atrás -->
    <div class="text-center mb-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Volver Atrás
        </a>
    </div>
</div>
