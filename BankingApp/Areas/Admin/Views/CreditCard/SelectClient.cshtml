@model IEnumerable<BankingApp.Core.Application.Dtos.User.UserDto>

@{
    ViewData["Title"] = "Seleccionar Cliente";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Volver al Listado
        </a>
    </div>

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["Warning"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Deuda Promedio -->
    <div class="row mb-4">
        <div class="col-xl-12 col-md-12 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Deuda Promedio de Todos los Clientes
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                $@(ViewBag.AverageDebt != null ? ((decimal)ViewBag.AverageDebt).ToString("N2") : "0.00")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-calculator text-gray-300" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Búsqueda por Cédula -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Buscar Cliente</h6>
        </div>
        <div class="card-body">
            <form asp-action="SelectClient" method="get">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="cedula" class="font-weight-bold">Buscar por Cédula:</label>
                        <input type="text" name="cedula" id="cedula" class="form-control" 
                               value="@ViewBag.Cedula" placeholder="11 dígitos sin guiones (Ej: 40212345678)"
                               pattern="[0-9]{11}" maxlength="11" title="Ingrese 11 dígitos sin guiones ni espacios">
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle"></i> Ingrese 11 dígitos sin guiones ni espacios
                        </small>
                    </div>
                    <div class="col-md-6 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary mr-2">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="SelectClient" class="btn btn-secondary">
                            <i class="bi bi-arrow-clockwise"></i> Limpiar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de Clientes -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Clientes Activos del Sistema</h6>
        </div>
        <div class="card-body">
            <form id="clientSelectionForm" asp-action="Create" method="get">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width: 5%;">Seleccionar</th>
                                <th>Cédula</th>
                                <th>Nombre y Apellido</th>
                                <th>Correo Electrónico</th>
                                <th>Deuda Total Acumulada</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                var clientDebts = ViewBag.ClientDebts as Dictionary<string, decimal>;
                                @foreach (var user in Model)
                                {
                                    var debt = clientDebts != null && clientDebts.ContainsKey(user.Id) ? clientDebts[user.Id] : 0m;
                                    <tr class="client-row" style="cursor: pointer;">
                                        <td class="text-center">
                                            <div class="form-check">
                                                <input class="form-check-input client-radio" type="radio" 
                                                       name="clientId" value="@user.Id" id="client_@user.Id"
                                                       data-name="@user.Name @user.LastName">
                                            </div>
                                        </td>
                                        <td>@user.DocumentIdNumber</td>
                                        <td>@user.Name @user.LastName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            <span class="font-weight-bold @(debt > 0 ? "text-danger" : "text-success")">
                                                $@debt.ToString("N2")
                                            </span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">
                                        <div class="alert alert-warning mb-0" role="alert">
                                            No hay clientes disponibles en el sistema.
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div id="nextStepSection" class="mt-4 text-center" style="display: none;">
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle"></i> 
                            Cliente seleccionado: <strong id="selectedClientName"></strong>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-arrow-right-circle"></i> Siguiente Paso
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Manejar selección de cliente
            $('.client-radio').on('change', function() {
                if ($(this).is(':checked')) {
                    var clientName = $(this).data('name');
                    $('#selectedClientName').text(clientName);
                    $('#nextStepSection').slideDown();
                    
                    // Resaltar la fila seleccionada
                    $('.client-row').removeClass('table-primary');
                    $(this).closest('tr').addClass('table-primary');
                }
            });

            // Validación del formulario
            $('#clientSelectionForm').on('submit', function(e) {
                var selectedClient = $('input[name="clientId"]:checked').val();
                
                if (!selectedClient) {
                    e.preventDefault();
                    alert('Por favor, seleccione un cliente antes de continuar.');
                    return false;
                }
            });

            // Hacer las filas clickeables
            $('.client-row').on('click', function(e) {
                if (!$(e.target).is('input[type="radio"]')) {
                    $(this).find('input[type="radio"]').prop('checked', true).trigger('change');
                }
            });
        });
    </script>
}
