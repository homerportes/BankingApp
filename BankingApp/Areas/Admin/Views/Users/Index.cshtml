@using BankingApp.Core.Application.ViewModels.User
@model UsersPageViewModel
@{
    string currentUser = User?.Identity?.Name ?? "";
}

<div class="container-fluid py-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div class="mb-3 mb-md-0">
            <h2 class="fw-bold text-primary mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-people-fill text-primary"></i>
                Gestión de Usuarios
            </h2>
            <p class="text-muted mb-0">Administra los usuarios del sistema</p>
        </div>

        <div class="d-flex flex-column flex-sm-row gap-2">
            <select id="roleFilter" class="form-select form-select-sm shadow-sm" asp-items="ViewBag.Filters">
                <option value="">Todos los roles</option>
            </select>

            <a asp-controller="Users" asp-action="Register" class="btn btn-primary shadow-sm rounded-pill d-flex align-items-center gap-1">
                <i class="bi bi-person-plus-fill"></i> Crear Usuario
            </a>
        </div>
    </div>

    <div class="row g-3" style="overflow-y: auto;">
        @if (Model.Users.Any())
        {
            @foreach (var item in Model.Users)
            {
                <div class="col-12">
                    <div class="card shadow-sm border-0 rounded-3 user-card">

                        <div class="card-body py-2 px-3 d-flex flex-column gap-3">

                            <!-- Fila 1 -->
                            <div class="d-flex flex-wrap align-items-center gap-3">

                                <span class="fw-bold text-primary d-flex align-items-center gap-1">
                                    <i class="bi bi-person-fill"></i>
                                    @item.Name @item.LastName
                                </span>

                                <span class="badge bg-primary bg-opacity-10 text-primary small">@item.Role</span>

                                <span class="text-muted small d-flex align-items-center gap-1">
                                    <i class="bi bi-envelope-fill"></i>
                                    <strong>Correo:</strong> @item.Email
                                </span>

                            </div>

                            <!-- Fila 2 -->
                            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">

                                <div class="d-flex flex-wrap align-items-center gap-3">

                                    <span class="text-muted small d-flex align-items-center gap-1">
                                        <i class="bi bi-person-badge"></i>
                                        <strong>Cédula:</strong> @item.DocumentIdNumber
                                    </span>

                                    <span class="small d-flex align-items-center gap-1">
                                        <i class="bi @(item.IsActive ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger")"></i>
                                        <strong>Estado:</strong>
                                        <span class="@(item.IsActive ? "text-success" : "text-danger")">
                                            @(item.IsActive ? "Activo" : "Inactivo")
                                        </span>
                                    </span>

                                </div>

                                <!-- Botones -->
                                <div class="d-flex flex-row gap-2">

                                    <a asp-controller="Users" asp-action="Edit" asp-route-userId="@item.Id"
                                       class="btn btn-outline-primary btn-sm rounded-pill px-3 @(item.UserName == currentUser ? "disabled" : "")">
                                        <i class="bi bi-pencil-square me-1"></i> Editar
                                    </a>

                                    <a asp-controller="Users"
                                       asp-action="@(item.IsActive ? "Deactivate" : "Activate")"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm rounded-pill px-3 @(item.IsActive ? "btn-outline-danger" : "btn-outline-success") @(item.UserName == currentUser ? "disabled" : "")">
                                        <i class="bi @(item.IsActive ? "bi-person-dash-fill" : "bi-person-check-fill") me-1"></i>
                                        @(item.IsActive ? "Desactivar" : "Activar")
                                    </a>

                                </div>

                            </div>

                        </div>

                    </div>
                </div>

                 
         
            }
        }
        else
        {
            <div class="col-12">
                <div class="card border-0 shadow-sm rounded-3">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-people text-muted mb-3" style="font-size: 3rem;"></i>
                        <h4 class="text-muted mb-1">No hay usuarios registrados</h4>
                        <p class="text-muted">Comienza creando el primer usuario del sistema</p>

                        <a asp-controller="Users" asp-action="Create" class="btn btn-primary rounded-pill d-flex align-items-center gap-1 mx-auto" style="width: fit-content;">
                            <i class="bi bi-person-plus-fill"></i> Crear Usuario
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4 pt-3 border-top">
        <nav aria-label="Navegación">
            <ul class="pagination pagination-sm justify-content-center">

                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    @if (Model.CurrentPage == 1)
                    {
                        <span class="page-link d-flex align-items-center">
                            <i class="bi bi-chevron-left me-1"></i> Anterior
                        </span>
                    }
                    else
                    {
                        <a asp-controller="Users" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-filter="@Model.Role"
                           class="page-link d-flex align-items-center">
                            <i class="bi bi-chevron-left me-1"></i> Anterior
                        </a>
                    }
                </li>

                @for (int i = 1; i <= Model.MaxPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        @if (Model.CurrentPage == i)
                        {
                            <span class="page-link">@i</span>
                        }
                        else
                        {
                            <a asp-controller="Users" asp-action="Index" asp-route-page="@i" asp-route-filter="@Model.Role"
                               class="page-link">@i</a>
                        }
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.MaxPages ? "disabled" : "")">
                    @if (Model.CurrentPage == Model.MaxPages)
                    {
                        <span class="page-link d-flex align-items-center">
                            Siguiente <i class="bi bi-chevron-right ms-1"></i>
                        </span>
                    }
                    else
                    {
                        <a asp-controller="Users" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-filter="@Model.Role"
                           class="page-link d-flex align-items-center">
                            Siguiente <i class="bi bi-chevron-right ms-1"></i>
                        </a>
                    }
                </li>

            </ul>
        </nav>
    </div>

</div>

<style>
    .user-card {
        transition: transform .15s ease;
        border-left: 4px solid #0d6efd !important;
    }

        .user-card:hover {
            transform: translateY(-2px);
        }

    .user-inline span {
        white-space: nowrap;
    }

    .row.g-3::-webkit-scrollbar {
        width: 6px;
    }

    .row.g-3::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 10px;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const roleFilter = document.getElementById('roleFilter');
            if (roleFilter) {
                roleFilter.addEventListener('change', function () {
                    const filter = this.value;
                    const baseUrl = '@Url.Action("Index", "Users")';
                    window.location.href = filter ? `${baseUrl}?filter=${encodeURIComponent(filter)}` : baseUrl;
                });
            }

            const cardsContainer = document.querySelector('.row.g-3');
            const headerHeight = document.querySelector('.container-fluid > .d-flex').offsetHeight;
            const paginationHeight = document.querySelector('.mt-4.pt-3.border-top').offsetHeight;

            if (cardsContainer) {
                cardsContainer.style.maxHeight = `50vh`;
            }
        });
    </script>
}
