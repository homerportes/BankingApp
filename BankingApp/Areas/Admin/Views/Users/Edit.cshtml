@model BankingApp.Core.Application.ViewModels.User.EditUserWithAmountViewModel

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "_LayoutAnonymous";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                <h5 class="mb-0">Editar Cuenta</h5>
            </div>

            <div class="card-body p-4">
                @if (Model?.HasError == true)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @Model.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-controller="Users" asp-action="EditPost" method="post" id="editForm">
                    <input type="hidden" asp-for="IsClient" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">Nombre</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Apellido</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DocumentIdNumber" class="form-label">Cédula</label>
                        <input asp-for="DocumentIdNumber" class="form-control" />
                        <span asp-validation-for="DocumentIdNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Correo Electrónico</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Usuario</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    @* ✅ Campo visible solo si el usuario es cliente *@
                    @if (Model.IsClient)
                    {
                        <div class="mb-3" id="AditionalAmountDiv">
                            <label asp-for="AditionalAmount" class="form-label">Monto adicional</label>
                            <input asp-for="AditionalAmount" type="number" min="0" step="0.01" required class="form-control" />
                            <span asp-validation-for="AditionalAmount" class="text-danger small"></span>
                        </div>
                    }

                    <button type="submit" class="btn btn-primary w-100 py-2 mb-3">Guardar Cambios</button>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary w-100 py-2">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
