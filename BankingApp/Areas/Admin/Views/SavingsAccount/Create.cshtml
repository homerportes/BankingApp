@model BankingApp.Core.Application.ViewModels.SavingsAccount.SaveSavingsAccountViewModel

@{
    ViewData["Title"] = "Asignar Cuenta de Ahorro Secundaria";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2>@ViewData["Title"]</h2>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Información del Cliente</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">@Model.ClientName</dd>

                        <dt class="col-sm-4">Cédula:</dt>
                        <dd class="col-sm-8">@Model.ClientDocumentId</dd>

                        <dt class="col-sm-4">Deuda Total:</dt>
                        <dd class="col-sm-8">$@Model.TotalDebt.ToString("N2")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Configuración de la Cuenta</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <input type="hidden" asp-for="ClientId" />
                        <input type="hidden" asp-for="ClientName" />
                        <input type="hidden" asp-for="ClientDocumentId" />
                        <input type="hidden" asp-for="TotalDebt" />

                        <div class="mb-3">
                            <label asp-for="InitialBalance" class="form-label">Balance Inicial</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="InitialBalance" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                            <span asp-validation-for="InitialBalance" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="SelectClient" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Regresar a selección de cliente
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Asignar cuenta
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
