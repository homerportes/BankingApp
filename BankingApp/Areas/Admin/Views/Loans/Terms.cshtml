@using BankingApp.Core.Application.ViewModels.Loan
@model TermPageViewModel

@{
    ViewData["Title"] = "Configurar préstamo";
}

<div class="container py-4">
    <div class="card mx-auto shadow-sm p-4" style="max-width:700px;">
        <h4 class="mb-3">Configurar préstamo para el cliente</h4>

        <form asp-action="CreateLoan" method="post" id="loanForm">
            <input asp-for="ClientId" type="hidden" />

            <div class="row g-3">

                <div class="col-md-6">
                    <label asp-for="TermInMonths" class="form-label">Plazo del préstamo</label>
                    <select asp-for="TermInMonths" class="form-select">
                        @for (int i = 6; i <= 60; i += 6)
                        {
                            <option value="@i">@i meses</option>
                        }
                    </select>
                    <span asp-validation-for="TermInMonths" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Amount" class="form-label">Monto</label>
                    <input asp-for="Amount" type="text" class="form-control" inputmode="decimal" />
                    <span asp-validation-for="Amount" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="AnnualInterestRate" class="form-label">Tasa de interés anual</label>
                    <input asp-for="AnnualInterestRate" type="text" class="form-control" inputmode="decimal" />
                    <span asp-validation-for="AnnualInterestRate" class="text-danger small"></span>
                </div>

            </div>

            <div class="d-flex justify-between mt-4">
                <a asp-action="Clients" class="btn btn-secondary">Volver al listado de clientes</a>
                <button type="submit" class="btn btn-primary">Confirmar préstamo</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("loanForm").addEventListener("submit", function () {
            const fields = ["Amount", "AnnualInterestRate"];

            fields.forEach(name => {
                const input = document.querySelector(`input[name="${name}"]`);

                if (input && input.value && input.offsetParent !== null) {
                    input.value = input.value.replace(",", ".");
                }
            });
        });
    </script>
}
