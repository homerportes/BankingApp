@using BankingApp.Core.Application.ViewModels.Loan
@model ClientsPageViewModel

@{
    ViewData["Title"] = "Asignar préstamo - Seleccionar cliente";
}

<div class="container py-4" style="max-width: 900px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold text-primary">Seleccionar cliente</h4>

        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-3">
            <i class="bi bi-arrow-left"></i> Volver a préstamos
        </a>
    </div>

    <div class="alert alert-info shadow-sm rounded-3">
        <strong>Deuda promedio del sistema:</strong> @Model.ClientsDebt.ToString("N2") DOP
    </div>

    <div class="mb-4">
        <input asp-for="DocumentIdFilter"
               id="filterInput"
               class="form-control form-control-lg shadow-sm rounded-pill px-4"
               placeholder="Buscar por cédula..."
               autocomplete="off" />
    </div>

    <form asp-action="Terms" method="post" id="selectClientForm">

        <div class="list-group shadow-sm rounded-4">

            @if (Model.Clients?.Any() == true)
            {
                foreach (var client in Model.Clients)
                {
                    <label class="list-group-item list-group-item-action py-3 d-flex justify-content-between align-items-center"
                           style="border: none; border-bottom: 1px solid #eee;">
                        <div class="form-check">
                            <input class="form-check-input me-3" type="radio" name="clientId" value="@client.Id" />

                            <div>
                                <strong class="text-dark">@client.Name @client.LastName</strong>
                                <div class="text-muted small">
                                    Cédula: @client.DocumentIdNumber — @client.Email
                                </div>
                            </div>
                        </div>

                        <div class="text-end">
                            <span class="small text-muted d-block">Deuda total</span>
                            <strong>@client.TotalDebt DOP</strong>
                        </div>
                    </label>
                }
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-people fs-4"></i>
                    <p class="mt-2">No hay clientes disponibles para asignar préstamo.</p>
                </div>
            }
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-3">
                <i class="bi bi-arrow-left"></i> Volver atrás
            </a>

            <button type="submit" class="btn btn-primary rounded-pill px-4">
                Siguiente paso <i class="bi bi-arrow-right-circle ms-1"></i>
            </button>
        </div>
    </form>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3 shadow-sm rounded-3">
            @TempData["Error"]
        </div>
    }

</div>

<!-- ✔️ Contenedor para el mensaje elegante -->
<div id="clientAlert"
     class="alert alert-danger shadow-sm rounded-3 text-center"
     style="display:none; position: fixed; bottom: 20px; left: 50%; transform: translateX(-50%); width: 300px; z-index: 9999;">
    Seleccionar un cliente es obligatorio.
</div>

@section Scripts {
    <script>
        const filterInput = document.getElementById("filterInput");
        let debounceTimer = null;

        filterInput.addEventListener("input", () => {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                const value = filterInput.value.trim();
                const query = value ? `?cedula=${encodeURIComponent(value)}` : "";
                window.location.href = `/Admin/Loans/Clients${query}`;
            }, 700);
        });

        document.getElementById("selectClientForm").addEventListener("submit", function (e) {
            const selected = document.querySelector("input[name='clientId']:checked");

            if (!selected) {
                e.preventDefault();

                const alertBox = document.getElementById("clientAlert");

                alertBox.style.display = "block";
                alertBox.style.opacity = "1";

                setTimeout(() => {
                    alertBox.style.transition = "opacity 0.4s ease";
                    alertBox.style.opacity = "0";

                    setTimeout(() => {
                        alertBox.style.display = "none";
                        alertBox.style.transition = "";
                    }, 400);

                }, 2500);
            }
        });
    </script>
}
