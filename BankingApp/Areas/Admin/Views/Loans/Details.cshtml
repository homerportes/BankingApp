@model BankingApp.Core.Application.ViewModels.Loan.DetailedLoanViewModel

@{
    ViewData["Title"] = "Detalles del Préstamo";
}

<div class="container py-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center py-3">
            <h4 class="fw-bold text-primary m-0">
                <i class="bi bi-file-earmark-text me-2"></i> Detalles del Préstamo
            </h4>

            <a asp-action="Index" class="btn btn-outline-primary btn-sm fw-semibold rounded-pill px-3">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>

        <div class="card-body px-4 pb-5 bg-white">
            <div class="mb-4 p-3 rounded-3 bg-light">
                <h6 class="text-muted mb-1">ID del Préstamo</h6>
                <span class="fs-4 fw-semibold text-dark">@Model.LoadId</span>
            </div>

            <div class="table-container shadow-sm rounded-4 overflow-hidden">
                <table class="table table-borderless mb-0 align-middle">
                    <thead class="custom-thead">
                        <tr>
                            <th># Cuota</th>
                            <th>Fecha de Pago</th>
                            <th>Valor</th>
                            <th>Pagado</th>
                            <th>Estado</th>
                        </tr>
                    </thead>

                    <tbody class="bg-white">
                        @foreach (var installment in Model.Installments)
                        {
                            <tr class="row-hover">
                                <td class="fw-semibold">@installment.Number</td>
                                <td>@installment.PayDate.ToString("dd/MM/yyyy")</td>
                                <td class="fw-semibold text-dark">@installment.Value.ToString("C")</td>
                                <td>
                                    @if (installment.IsPaid)
                                    {
                                        <span class="badge rounded-pill bg-success px-3 py-2 shadow-sm">Pagado</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-secondary px-3 py-2 shadow-sm">Pendiente</span>
                                    }
                                </td>
                                <td>
                                    @if (installment.IsDelinquent)
                                    {
                                        <span class="badge rounded-pill bg-danger px-3 py-2 shadow-sm">En mora</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-primary px-3 py-2 shadow-sm">Al día</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<style>
    body {
        background-color: #eef2f7;
        font-family: "Segoe UI", Roboto, sans-serif;
    }

    /* Encabezado de tabla personalizado */
    .custom-thead {
        background: linear-gradient(90deg, #0d6efd, #0b5ed7);
        color: white;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    /* Hover moderno */
    .row-hover:hover {
        background-color: #f5f8ff !important;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    .table-container {
        border: 1px solid #dce3ec;
    }

    .badge {
        font-size: 0.85rem;
    }

    .card {
        border-radius: 1.5rem;
    }

    .table thead th {
        padding-top: 1rem;
        padding-bottom: 1rem;
        border-bottom: none;
    }

    .table td {
        padding: 1rem 0.75rem;
        color: #444;
    }

    .table tbody tr + tr td {
        border-top: 1px solid #edf1f5;
    }

    .btn-outline-primary {
        border-radius: 30px;
        padding: 6px 18px;
    }

        .btn-outline-primary:hover {
            background-color: #0d6efd;
            color: white;
        }
</style>
