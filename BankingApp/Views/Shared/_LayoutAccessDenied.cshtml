<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            background-color: #003d82;
        }

        .navbar-brand {
            font-weight: 700;
            color: #fff !important;
        }

        .navbar-nav .nav-link {
            color: #fff !important;
            font-weight: 500;
        }

        main {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 3rem 1rem;
        }

        .access-card {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 0 25px rgba(0,0,0,0.15);
            padding: 3rem 2rem;
            max-width: 500px;
            text-align: center;
        }

            .access-card h1 {
                font-size: 4rem;
                color: #e63946;
                margin-bottom: 1rem;
            }

            .access-card h3 {
                font-size: 1.5rem;
                color: #333;
                margin-bottom: 2rem;
            }

        .btn-home {
            background-color: #003d82;
            color: #fff;
            font-weight: 600;
            padding: 0.7rem 1.5rem;
            border-radius: 8px;
            text-decoration: none;
        }

            .btn-home:hover {
                background-color: #2c9fa3;
                color: #fff;
            }

        footer {
            text-align: center;
            padding: 1rem 0;
            color: #6c757d;
            font-size: 0.9rem;
            border-top: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">üè¶ BankingApp</a>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <span class="nav-link">Denegado</span>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main>
        <div class="access-card">
            @RenderBody()
        </div>
    </main>

    <footer>
        &copy; 2025 - BankingApp
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

