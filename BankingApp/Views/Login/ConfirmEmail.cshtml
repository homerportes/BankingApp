@model string

@{
    ViewData["Title"] = "Confirmación";
    Layout = "_LayoutAnonymous";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-success text-white text-center py-3 rounded-top-4">
                <h5 class="mb-0">Mensaje de Confirmación</h5>
            </div>

            <div class="card-body text-center p-4">
                <div class="alert alert-primary rounded-4 shadow-sm p-4 mb-4" role="alert">
                    <h5 class="fw-semibold mb-3">@Model</h5>
                    <hr />
                    <div class="d-flex justify-content-center gap-3">
                        <a class="btn btn-primary px-4" asp-controller="Login" asp-action="Index">
                            Iniciar Sesión
                        </a>
                        <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="alert">
                            Cerrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
