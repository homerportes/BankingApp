@model BankingApp.Core.Application.ViewModels.User.RegisterViewModel

@{
    ViewData["Title"] = "Registrarse";
    Layout = "_LayoutAnonymous";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                <h5 class="mb-0">Crear Cuenta</h5>
            </div>

            <div class="card-body p-4">
                @if (Model?.HasError == true)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @Model.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-controller="Login" asp-action="Register" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">Nombre</label>
                            <input asp-for="Name" class="form-control" placeholder="Tu nombre" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Apellido</label>
                            <input asp-for="LastName" class="form-control" placeholder="Tu apellido" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DocumentIdNumber" class="form-label">Cédula</label>
                        <input asp-for="DocumentIdNumber" class="form-control" placeholder="000-0000000-0" />
                        <span asp-validation-for="DocumentIdNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Correo Electrónico</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="tu@email.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Nombre de Usuario</label>
                        <input asp-for="UserName" class="form-control" placeholder="nombreusuario" />
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 mb-3">Crear Cuenta</button>
                    <a asp-controller="Login" asp-action="Index" class="btn btn-outline-secondary w-100 py-2">
                        Volver al inicio de sesión
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
