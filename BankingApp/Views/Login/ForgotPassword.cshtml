@model BankingApp.Core.Application.ViewModels.User.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "_LayoutAnonymous";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                <h5 class="mb-0">Recuperar Contraseña</h5>
            </div>

            <div class="card-body p-4">
                <div class="alert alert-info rounded-4 shadow-sm mb-4" role="alert">
                    <strong>Información:</strong> Ingresa tu nombre de usuario y te enviaremos un enlace para restablecer tu contraseña.
                </div>

                @if (Model?.HasError == true)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @Model.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-controller="Login" asp-action="ForgotPassword" method="post">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Nombre de Usuario</label>
                        <input asp-for="UserName" class="form-control" placeholder="Ingresa tu usuario" />
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                        Enviar Enlace de Recuperación
                    </button>

                    <a asp-controller="Login" asp-action="Index" class="btn btn-outline-secondary w-100 py-2">
                        Volver al inicio de sesión
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
